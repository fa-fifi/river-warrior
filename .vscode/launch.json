{
    "version": "0.2.0",
    "configurations": [
        // When you want to use hot reload during development.
        {
            "name": "Debug",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main.dart",
            "toolArgs": [
                "--dart-define-from-file=.env"
            ],
        },
        // When you want to analyze performance.
        {
            "name": "Profile",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "program": "lib/main.dart",
            "toolArgs": [
                "--dart-define-from-file=.env"
            ],
        },
        // When you are ready to release your app.
        {
            "name": "Release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "lib/main.dart",
            "toolArgs": [
                "--dart-define-from-file=.env"
            ],
        }
    ],
}